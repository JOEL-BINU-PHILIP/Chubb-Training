public record Beneficiary(String name, String Accno, String bankName) {

    public Beneficiary {
        if(name.isBlank() || name==null){
            System.out.println("Null name");
        }
        if(Accno.isBlank() || Accno==null){
            System.out.println("Null Accno");
        }
        if(bankName.isBlank() || bankName==null){
            System.out.println("Null bankName");
        }
    }

    public Beneficiary updatedbankName(String newbankName){
        return new Beneficiary(name,Accno,newbankName);
    }

    public Beneficiary updatename(String newName){
        return new Beneficiary(newName, Accno, bankName);
    }

    public Beneficiary updateAccno(String newAccno){
        return new Beneficiary(name,newAccno,bankName);
    }

    public Beneficiary updateDetails(String newName, String newAccno, String newbankName){
        return new Beneficiary(newName,newAccno,newbankName);
    }

    public void display(Beneficiary obj){
        System.out.println("Name: "+obj.name()+" Account Number: "+obj.Accno()+" Bank Name: "+obj.bankName());
    }
}