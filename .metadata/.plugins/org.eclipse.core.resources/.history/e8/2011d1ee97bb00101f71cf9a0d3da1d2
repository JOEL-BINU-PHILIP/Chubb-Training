import java.util.*;

//  Manages all car data using a nested HashMap.

public class CarData {

    // The HashMap now stores a CarModel object for each model
    private Map<String, Map<String, CarModel>> carData;

    public CarData() {
        carData = new HashMap<>();
        initializeData();
    }    
    
    //  Loads the car data, price and engine CC.
     
    private void initializeData() {
        // Ferrari Models
        Map<String, CarModel> ferrariModels = new HashMap<>();
        ferrariModels.put("Ferrari LaFerrari", new CarModel(4000000.0, 6262));
        ferrariModels.put("458 Italia", new CarModel(169995.0, 4497));
        carData.put("Ferrari", ferrariModels);

        // Lamborghini Models
        Map<String, CarModel> lamboModels = new HashMap<>();
        lamboModels.put("Sesto Elemento", new CarModel(2200000.0, 5200));
        carData.put("Lamborghini", lamboModels);

        // Lotus Models
        Map<String, CarModel> lotusModels = new HashMap<>();
        lotusModels.put("Exige", new CarModel(137510.0, 3456));
        carData.put("Lotus", lotusModels);

        // Bentley Models
        Map<String, CarModel> bentleyModels = new HashMap<>();
        bentleyModels.put("Continental GT", new CarModel(160920.0, 5950));
        carData.put("Bentley", bentleyModels);

        // Rolls Royce Models
        Map<String, CarModel> rollsModels = new HashMap<>();
        rollsModels.put("Wraith", new CarModel(559570.0, 6592));
        carData.put("Rolls Royce", rollsModels);
    }

    
    //  Returns a Set of all available brands.
     
    public Set<String> getBrands() {
        return carData.keySet();
    }

    
    //  Returns a Map of models and their CarModel objects for a given brand.
     
    public Map<String, CarModel> getModelsForBrand(String brand) {
        return carData.get(brand);
    }

    // Returns the Model of the Car
     
    public CarModel getModel(String brand, String model) {
        return carData.get(brand).get(model);
    }
}