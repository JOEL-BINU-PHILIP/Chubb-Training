/**
 * Abstract base class for all vehicles.
 * Implements the Insurable interface so that we can see which insurance is there.
 */
public abstract class Vehicle implements Insurable {

    // Protected fields for access by child classes
    protected String brand;
    protected String model;
    protected double exShowroomPrice;

    public Vehicle(String brand, String model, double exShowroomPrice) {
        this.brand = brand;
        this.model = model;
        this.exShowroomPrice = exShowroomPrice;
    }
    
    /**
     * Calculates the final on-road price, including taxes and fees.
     * The implementation is left to child classes.
     */
    public abstract double calculateOnRoadPrice();

    // --- Getters (Encapsulation) ---

    public String getBrand() {
        return brand;
    }

    public String getModel() {
        return model;
    }

    public double getExShowroomPrice() {
        return exShowroomPrice;
    }
}
